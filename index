    <script>
        // ====================
        // API CONFIGURATION
        // ====================
        
        // Auto-detect API URL - IMPORTANT: Update this to your Vercel backend URL
        const API_CONFIG = {
            // For production (Vercel deployment):
            // BASE_URL: 'https://your-vercel-backend-url.vercel.app/api',
            
            // For development (local backend):
            // BASE_URL: 'http://localhost:3000/api',
            
            // Auto-detection (will work for both local and production):
            BASE_URL: window.location.hostname === 'localhost' 
                ? 'http://localhost:3000/api' 
                : window.location.origin + '/api',
            
            ENDPOINTS: {
                MOTORCYCLES: '/motorcycles',
                TESTIMONIALS: '/testimonials',
                INQUIRIES: '/inquiries',
                ADMIN_LOGIN: '/admin/login',
                ADMIN_VERIFY: '/admin/verify',
                BACKUP: '/backup',
                HEALTH: '/health'
            }
        };

        console.log('üåê API Base URL:', API_CONFIG.BASE_URL);

        // ====================
        // STATE MANAGEMENT
        // ====================
        
        let motorcycles = [];
        let testimonials = [];
        let isAdminLoggedIn = false;
        let adminToken = null;
        let adminTokenExpiry = null;
        let eventListenersBound = false;
        let uploadedPhotos = [];

        // ====================
        // UTILITY FUNCTIONS
        // ====================
        
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatBytes(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        function validatePhoneNumber(phone) {
            const kenyanPhoneRegex = /^(\+?254|0)?[71]\d{8}$/;
            return kenyanPhoneRegex.test(phone.replace(/\s+/g, ''));
        }

        // ====================
        // API FUNCTIONS
        // ====================
        
        async function apiRequest(endpoint, method = 'GET', body = null, isFormData = false) {
            try {
                const url = API_CONFIG.BASE_URL + endpoint;
                const options = {
                    method,
                    headers: {},
                    mode: 'cors'
                };

                if (body) {
                    if (isFormData) {
                        options.body = body;
                    } else {
                        options.headers['Content-Type'] = 'application/json';
                        options.body = JSON.stringify(body);
                    }
                }

                // Add auth token if logged in
                if (isAdminLoggedIn && adminToken) {
                    options.headers['Authorization'] = `Bearer ${adminToken}`;
                }

                const response = await fetch(url, options);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('API Error:', response.status, errorText);
                    
                    if (response.status === 401) {
                        // Token expired
                        logoutAdmin();
                        showNotification('Session expired. Please login again.', 'warning');
                    }
                    
                    throw new Error(`API Error: ${response.status} - ${errorText}`);
                }

                return await response.json();
            } catch (error) {
                console.error('API Request Error:', error);
                throw error;
            }
        }

        // ====================
        // DATABASE FUNCTIONS
        // ====================
        
        async function loadFromDatabase() {
            updateDataStatus('Loading data...', 'blue');
            
            try {
                // Test API connection
                try {
                    const health = await apiRequest(API_CONFIG.ENDPOINTS.HEALTH);
                    console.log('‚úÖ API Health:', health);
                } catch (healthError) {
                    console.warn('‚ö†Ô∏è API health check failed, continuing anyway...');
                }

                // Load motorcycles
                const motorcyclesData = await apiRequest(API_CONFIG.ENDPOINTS.MOTORCYCLES);
                motorcycles = motorcyclesData.map(bike => ({
                    ...bike,
                    images: bike.images || []
                }));
                
                // Load testimonials
                const testimonialsData = await apiRequest(API_CONFIG.ENDPOINTS.TESTIMONIALS);
                testimonials = testimonialsData;
                
                updateDataStatus(`${motorcycles.length} motorcycles loaded`, 'green');
                return true;
                
            } catch (error) {
                console.error('‚ùå Error loading from database:', error);
                updateDataStatus('Error loading data. Please check backend connection.', 'red');
                
                // Show error details in console for debugging
                console.log('üîß Debug Info:', {
                    apiUrl: API_CONFIG.BASE_URL,
                    error: error.message
                });
                
                return false;
            }
        }

        async function saveMotorcycle(bike) {
            try {
                if (bike.id) {
                    // Update existing motorcycle
                    await apiRequest(`${API_CONFIG.ENDPOINTS.MOTORCYCLES}/${bike.id}`, 'PUT', bike);
                    showNotification('Motorcycle updated!', 'success');
                } else {
                    // Create new motorcycle
                    const result = await apiRequest(API_CONFIG.ENDPOINTS.MOTORCYCLES, 'POST', bike);
                    showNotification('Motorcycle created!', 'success');
                    return result;
                }
            } catch (error) {
                showNotification('Error saving motorcycle', 'error');
                throw error;
            }
        }

        async function deleteMotorcycleFromDB(id) {
            try {
                await apiRequest(`${API_CONFIG.ENDPOINTS.MOTORCYCLES}/${id}`, 'DELETE');
                showNotification('Motorcycle deleted!', 'success');
                return true;
            } catch (error) {
                showNotification('Error deleting motorcycle', 'error');
                return false;
            }
        }

        async function uploadMotorcycleImages(bikeId, files) {
            try {
                const formData = new FormData();
                files.forEach(file => {
                    formData.append('images', file);
                });

                const result = await apiRequest(
                    `${API_CONFIG.ENDPOINTS.MOTORCYCLES}/${bikeId}/images`,
                    'POST',
                    formData,
                    true
                );
                
                showNotification('Images uploaded!', 'success');
                return result;
            } catch (error) {
                showNotification('Error uploading images', 'error');
                throw error;
            }
        }

        async function saveTestimonial(testimonial) {
            try {
                if (testimonial.id) {
                    // Update existing testimonial
                    await apiRequest(`${API_CONFIG.ENDPOINTS.TESTIMONIALS}/${testimonial.id}`, 'PUT', testimonial);
                    showNotification('Testimonial updated!', 'info');
                } else {
                    // Create new testimonial
                    const result = await apiRequest(API_CONFIG.ENDPOINTS.TESTIMONIALS, 'POST', testimonial);
                    showNotification('Testimonial added!', 'success');
                    return result;
                }
            } catch (error) {
                showNotification('Error saving testimonial', 'error');
                throw error;
            }
        }

        async function submitInquiry(inquiryData, photos) {
            try {
                const formData = new FormData();
                
                // Add form data
                Object.keys(inquiryData).forEach(key => {
                    formData.append(key, inquiryData[key]);
                });
                
                // Add photos
                photos.forEach(photo => {
                    formData.append('photos', photo.file);
                });

                await apiRequest(
                    API_CONFIG.ENDPOINTS.INQUIRIES,
                    'POST',
                    formData,
                    true
                );
                
                showNotification('Inquiry submitted! Opening WhatsApp...', 'success');
                
                // Also send WhatsApp message
                const message = `üèçÔ∏è *NEW MOTORCYCLE INQUIRY*\n\n` +
                               `üë§ *Name:* ${escapeHtml(inquiryData.name)}\n` +
                               `üì± *Phone:* ${escapeHtml(inquiryData.phone)}\n` +
                               `üèçÔ∏è *Motorcycle Model:* ${escapeHtml(inquiryData.model)}\n` +
                               `üìÖ *Year:* ${escapeHtml(inquiryData.year)}\n` +
                               (inquiryData.details ? `üìù *Details:* ${escapeHtml(inquiryData.details)}\n` : '') +
                               `\nüì∏ *Photos Uploaded:* ${photos.length} photo(s)` +
                               `\n\n_Submitted via MWIRUTI JNR Website_`;
                
                const encodedMessage = encodeURIComponent(message);
                const whatsappURL = `https://wa.me/254725101417?text=${encodedMessage}`;
                window.open(whatsappURL, '_blank');
                
                return true;
            } catch (error) {
                showNotification('Error submitting inquiry', 'error');
                throw error;
            }
        }

        async function exportData() {
            try {
                const backupData = await apiRequest(API_CONFIG.ENDPOINTS.BACKUP);
                
                const dataStr = JSON.stringify(backupData, null, 2);
                const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
                
                const exportFileDefaultName = `mwiruti_backup_${new Date().toISOString().split('T')[0]}.json`;
                
                const linkElement = document.createElement('a');
                linkElement.setAttribute('href', dataUri);
                linkElement.setAttribute('download', exportFileDefaultName);
                linkElement.click();
                
                showNotification('Data exported successfully!', 'success');
            } catch (error) {
                showNotification('Error exporting data', 'error');
            }
        }

        function updateDataStatus(message, color = 'blue') {
            const statusEl = document.getElementById('dataStatus');
            if (statusEl) {
                const colorClasses = {
                    blue: 'bg-blue-50 text-blue-600',
                    green: 'bg-green-50 text-green-600',
                    red: 'bg-red-50 text-red-600',
                    yellow: 'bg-yellow-50 text-yellow-600'
                };
                
                const colorClass = colorClasses[color] || colorClasses.blue;
                statusEl.className = `text-sm px-3 py-1 rounded-lg ${colorClass}`;
                
                const iconName = color === 'green' ? 'check-circle' : 
                               color === 'red' ? 'alert-circle' : 
                               color === 'yellow' ? 'alert-triangle' : 'database';
                
                statusEl.innerHTML = `<i data-feather="${iconName}" class="inline w-3 h-3 mr-1"></i><span>${message}</span>`;
                
                feather.replace({ 'data-feather': iconName });
            }
        }

        // ====================
        // ADMIN AUTHENTICATION
        // ====================
        
        async function checkAdminSession() {
            try {
                const token = localStorage.getItem('admin_token');
                const expiry = localStorage.getItem('admin_token_expiry');
                
                if (token && expiry && new Date(expiry) > new Date()) {
                    // Verify token with server
                    const result = await apiRequest(API_CONFIG.ENDPOINTS.ADMIN_VERIFY, 'POST', { token });
                    
                    if (result.valid) {
                        isAdminLoggedIn = true;
                        adminToken = token;
                        adminTokenExpiry = expiry;
                        updateUIForAdminState();
                        showNotification('Admin session restored', 'info');
                        return true;
                    }
                }
            } catch (error) {
                console.error('Error checking admin session:', error);
            }
            
            // Clear invalid session
            localStorage.removeItem('admin_token');
            localStorage.removeItem('admin_token_expiry');
            return false;
        }

        async function loginAdmin(username, password) {
            try {
                const result = await apiRequest(API_CONFIG.ENDPOINTS.ADMIN_LOGIN, 'POST', {
                    username,
                    password
                });
                
                // Store token
                localStorage.setItem('admin_token', result.token);
                localStorage.setItem('admin_token_expiry', result.expiry);
                
                isAdminLoggedIn = true;
                adminToken = result.token;
                adminTokenExpiry = result.expiry;
                
                updateUIForAdminState();
                hideLoginModal();
                showNotification('Admin login successful!', 'success');
                
                return true;
            } catch (error) {
                console.error('Login error:', error);
                showNotification('Login failed. Check credentials and backend connection.', 'error');
                return false;
            }
        }

        function logoutAdmin() {
            isAdminLoggedIn = false;
            adminToken = null;
            adminTokenExpiry = null;
            localStorage.removeItem('admin_token');
            localStorage.removeItem('admin_token_expiry');
            updateUIForAdminState();
            showNotification('Logged out successfully.', 'info');
        }

        function updateUIForAdminState() {
            const adminControls = document.getElementById('adminControls');
            const addNewBikeBtn = document.getElementById('addNewBikeBtn');
            const editStatus = document.getElementById('editStatus');
            
            if (isAdminLoggedIn) {
                adminControls.classList.remove('hidden');
                document.documentElement.style.setProperty('--admin-bar-height', '40px');
                addNewBikeBtn.disabled = false;
                
                editStatus.innerHTML = `
                    <i data-feather="edit" class="inline w-3 h-3 mr-1 text-green-500"></i>
                    <span class="text-green-600">Editing Enabled</span> - 
                    <a href="#" class="text-orange-600 hover:underline" onclick="logoutAdmin(); return false;">Logout</a>
                `;
                
            } else {
                adminControls.classList.add('hidden');
                document.documentElement.style.setProperty('--admin-bar-height', '0px');
                addNewBikeBtn.disabled = true;
                
                editStatus.innerHTML = `
                    <i data-feather="lock" class="inline w-3 h-3 mr-1"></i>
                    View Only - <a href="#" class="text-orange-600 hover:underline" onclick="showLoginModal(); return false;">Login to Edit</a>
                `;
            }
            
            renderMotorcycles();
            renderTestimonials();
            feather.replace();
        }

        // ====================
        // MOTORCYCLES FUNCTIONS
        // ====================
        
        function renderMotorcycles() {
            const grid = document.getElementById('motorcycleGrid');
            
            if (motorcycles.length === 0) {
                grid.innerHTML = `
                    <div class="md:col-span-3 text-center py-12">
                        <i data-feather="alert-circle" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Motorcycles Available</h3>
                        <p class="text-gray-500">${isAdminLoggedIn ? 'Click "Add New Motorcycle Listing" to create your first listing!' : 'Check back soon for new listings'}</p>
                    </div>
                `;
                feather.replace();
                return;
            }
            
            grid.innerHTML = motorcycles.map((bike) => {
                const bikeImages = bike.images || [];
                const primaryImage = bikeImages.find(img => img.is_primary) || bikeImages[0];
                
                return `
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all motorcycle-card" id="bike-${bike.id}">
                    <!-- Image Area -->
                    <div class="relative w-full h-48 bg-gradient-to-br from-gray-100 to-gray-200 overflow-hidden">
                        ${primaryImage ? `
                            <img src="${primaryImage.image_url}" 
                                 alt="${escapeHtml(bike.name)}" 
                                 class="w-full h-full object-cover cursor-pointer"
                                 onclick="previewImage('${primaryImage.id}', '${primaryImage.image_url}', '${primaryImage.image_name}', ${primaryImage.size})">
                            
                            ${bikeImages.length > 1 ? `
                                <div class="absolute top-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded-full">
                                    ${bikeImages.length} photos
                                </div>
                            ` : ''}
                            
                            ${isAdminLoggedIn ? `
                                <div class="absolute inset-0 bg-black/50 opacity-0 hover:opacity-100 transition flex flex-col items-center justify-center p-4">
                                    <input type="file" 
                                           id="imageUpload${bike.id}" 
                                           accept="image/*" 
                                           class="hidden" 
                                           onchange="handleImageUpload(event, ${bike.id})"
                                           multiple>
                                    <button onclick="document.getElementById('imageUpload${bike.id}').click()" 
                                            class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-4 py-2 rounded-lg mb-2 hover:from-orange-600 hover:to-orange-700 transition w-48">
                                        <i data-feather="upload" class="inline w-4 h-4 mr-2"></i>
                                        ${bikeImages.length > 0 ? 'Add More Photos' : 'Add Photos'}
                                    </button>
                                </div>
                            ` : ''}
                        ` : `
                            <div class="w-full h-full flex flex-col items-center justify-center text-gray-400 ${isAdminLoggedIn ? 'cursor-pointer hover:bg-gray-50' : ''}"
                                 ${isAdminLoggedIn ? `onclick="document.getElementById('imageUpload${bike.id}').click()"` : ''}>
                                <i data-feather="camera" class="w-12 h-12 mb-3"></i>
                                <p class="font-semibold">${isAdminLoggedIn ? 'Click to Add Photos' : 'No Photo'}</p>
                                ${isAdminLoggedIn ? '<p class="text-sm mt-1">Upload motorcycle images</p>' : ''}
                                ${isAdminLoggedIn ? `
                                    <input type="file" 
                                           id="imageUpload${bike.id}" 
                                           accept="image/*" 
                                           class="hidden" 
                                           onchange="handleImageUpload(event, ${bike.id})"
                                           multiple>
                                ` : ''}
                            </div>
                        `}
                    </div>

                    <!-- Details -->
                    <div class="p-5 details-container">
                        ${isAdminLoggedIn ? `
                            <input type="text" 
                                   value="${escapeHtml(bike.name || '')}" 
                                   placeholder="Motorcycle name..."
                                   oninput="debounceUpdateMotorcycle(${bike.id}, 'name', this.value)"
                                   class="text-xl font-bold mb-2 text-slate-800 w-full border-b-2 border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none transition">
                            
                            <input type="text" 
                                   value="${escapeHtml(bike.price || '')}" 
                                   placeholder="Price (e.g., KSh 180,000)..."
                                   oninput="debounceUpdateMotorcycle(${bike.id}, 'price', this.value)"
                                   class="text-2xl font-bold bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent mb-3 w-full border-b-2 border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none transition">
                            
                            <textarea 
                                   placeholder="Description..."
                                   oninput="debounceUpdateMotorcycle(${bike.id}, 'description', this.value)"
                                   class="text-gray-600 mb-3 w-full border-2 border-transparent hover:border-orange-300 focus:border-orange-500 rounded-lg p-2 focus:outline-none transition resize-none" 
                                   rows="2">${escapeHtml(bike.description || '')}</textarea>
                            
                            <div class="flex justify-between text-sm text-gray-500 border-t pt-3 gap-2">
                                <div class="flex items-center gap-1">
                                    <i data-feather="calendar" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${escapeHtml(bike.year || '')}" 
                                           placeholder="Year"
                                           oninput="debounceUpdateMotorcycle(${bike.id}, 'year', this.value)"
                                           class="w-16 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="activity" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${escapeHtml(bike.mileage || '')}" 
                                           placeholder="Mileage"
                                           oninput="debounceUpdateMotorcycle(${bike.id}, 'mileage', this.value)"
                                           class="w-20 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="map-pin" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${escapeHtml(bike.location || '')}" 
                                           placeholder="Location"
                                           oninput="debounceUpdateMotorcycle(${bike.id}, 'location', this.value)"
                                           class="w-20 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                            </div>
                            
                            <div class="mt-4 space-y-2">
                                <button type="button" 
                                        onclick="toggleMotorcycleFeature(${bike.id})" 
                                        class="w-full ${!bike.featured ? 'bg-gray-100 text-gray-600 hover:bg-gray-200' : 'bg-yellow-50 text-yellow-600 hover:bg-yellow-100'} py-2 rounded-lg transition text-sm font-semibold">
                                    <i data-feather="${!bike.featured ? 'eye-off' : 'eye'}" class="inline w-4 h-4 mr-2"></i>
                                    ${!bike.featured ? 'Hidden - Click to Show' : 'Featured - Click to Hide'}
                                </button>
                                <button type="button" 
                                        onclick="deleteMotorcycle(${bike.id})" 
                                        class="w-full bg-red-50 text-red-600 hover:bg-red-100 py-2 rounded-lg transition text-sm font-semibold">
                                    <i data-feather="trash-2" class="inline w-4 h-4 mr-2"></i> Remove Listing
                                </button>
                            </div>
                        ` : `
                            <h3 class="text-xl font-bold mb-2 text-slate-800">${escapeHtml(bike.name || 'Motorcycle Name')}</h3>
                            <p class="text-2xl font-bold bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent mb-3">${escapeHtml(bike.price || 'Price on Request')}</p>
                            <p class="text-gray-600 mb-3">${escapeHtml(bike.description || 'Description not available.')}</p>
                            <div class="flex justify-between text-sm text-gray-500 border-t pt-3">
                                <div class="flex items-center gap-1">
                                    <i data-feather="calendar" class="w-4 h-4"></i>
                                    <span>${escapeHtml(bike.year || 'Year')}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="activity" class="w-4 h-4"></i>
                                    <span>${escapeHtml(bike.mileage || 'Mileage')}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="map-pin" class="w-4 h-4"></i>
                                    <span>${escapeHtml(bike.location || 'Location')}</span>
                                </div>
                            </div>
                            <div class="mt-4 space-y-2">
                                <button onclick="inquiryMotorcycle(${bike.id})" 
                                        class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white py-2 rounded-lg transition text-sm font-semibold">
                                    <i data-feather="message-circle" class="inline w-4 h-4 mr-2"></i> Inquire About This Bike
                                </button>
                                <button onclick="shareMotorcycle(${bike.id})" 
                                        class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white py-2 rounded-lg transition text-sm font-semibold">
                                    <i data-feather="share-2" class="inline w-4 h-4 mr-2"></i> Share This Bike
                                </button>
                            </div>
                        `}
                    </div>
                </div>
            `}).join('');
            
            feather.replace();
        }

        // Debounce function for updates
        const debounceTimers = {};
        function debounceUpdateMotorcycle(id, field, value) {
            clearTimeout(debounceTimers[`bike-${id}-${field}`]);
            debounceTimers[`bike-${id}-${field}`] = setTimeout(async () => {
                await updateMotorcycle(id, field, value);
            }, 500);
        }

        async function updateMotorcycle(id, field, value) {
            if (!isAdminLoggedIn) {
                showNotification('Please login to edit listings', 'warning');
                return;
            }
            
            const bike = motorcycles.find(b => b.id === id);
            if (bike) {
                bike[field] = value;
                
                try {
                    await saveMotorcycle(bike);
                } catch (error) {
                    showNotification('Error saving changes', 'error');
                }
            }
        }

        async function handleImageUpload(event, bikeId) {
            if (!isAdminLoggedIn) return;
            
            const files = Array.from(event.target.files);
            if (files.length === 0) return;

            // Validate files
            for (const file of files) {
                if (file.size > 5 * 1024 * 1024) { // 5MB
                    showNotification(`${file.name} is too large. Max size is 5MB`, 'error');
                    return;
                }

                if (!file.type.startsWith('image/')) {
                    showNotification(`${file.name} is not an image file`, 'error');
                    return;
                }
            }

            try {
                // Show loading state
                const button = event.target.parentElement?.querySelector('button');
                if (button) {
                    const originalText = button.innerHTML;
                    button.innerHTML = '<div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white mx-auto"></div>';
                    button.disabled = true;
                    
                    await uploadMotorcycleImages(bikeId, files);
                    
                    // Reload motorcycles to get updated images
                    await loadFromDatabase();
                    renderMotorcycles();
                    
                    // Restore button
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            } catch (error) {
                console.error('Error uploading images:', error);
            }
            
            event.target.value = '';
        }

        async function toggleMotorcycleFeature(id) {
            if (!isAdminLoggedIn) return;
            
            const bike = motorcycles.find(b => b.id === id);
            if (bike) {
                bike.featured = !bike.featured;
                
                try {
                    await saveMotorcycle(bike);
                    showNotification(bike.featured ? 'Motorcycle featured' : 'Motorcycle hidden', 'info');
                } catch (error) {
                    showNotification('Error updating motorcycle', 'error');
                }
            }
        }

        async function deleteMotorcycle(id) {
            if (!isAdminLoggedIn) {
                showNotification('Please login to delete listings', 'warning');
                return;
            }
            
            if (confirm('Are you sure you want to delete this motorcycle listing?')) {
                try {
                    await deleteMotorcycleFromDB(id);
                    // Remove from local state
                    motorcycles = motorcycles.filter(b => b.id !== id);
                    renderMotorcycles();
                } catch (error) {
                    showNotification('Error deleting motorcycle', 'error');
                }
            }
        }

        async function addNewMotorcycle() {
            if (!isAdminLoggedIn) {
                showLoginModal();
                return;
            }
            
            const newMotorcycle = {
                name: 'New Motorcycle',
                price: 'KSh 0',
                description: 'Enter description here...',
                year: '2024',
                mileage: '0 km',
                location: 'Embu',
                featured: true
            };
            
            try {
                const result = await saveMotorcycle(newMotorcycle);
                motorcycles.push(result);
                renderMotorcycles();
                
                // Scroll to the new motorcycle
                setTimeout(() => {
                    document.getElementById(`bike-${result.id}`)?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            } catch (error) {
                showNotification('Error creating new motorcycle', 'error');
            }
        }

        function inquiryMotorcycle(bikeId) {
            const bike = motorcycles.find(b => b.id === bikeId);
            if (!bike) return;
            
            const message = `Hello MWIRUTI JNR, I'm interested in the ${bike.name} motorcycle. Please send me more details.`;
            const encodedMessage = encodeURIComponent(message);
            const whatsappURL = `https://wa.me/254725101417?text=${encodedMessage}`;
            window.open(whatsappURL, '_blank');
        }

        // ====================
        // IMAGE PREVIEW FUNCTIONS
        // ====================
        
        function previewImage(imageId, imageUrl, imageName, imageSize) {
            document.getElementById('previewedImage').src = imageUrl;
            document.getElementById('imagePreviewName').textContent = imageName || 'Image';
            document.getElementById('imagePreviewSize').textContent = formatBytes(imageSize || 0);
            document.getElementById('imagePreviewModal').classList.remove('hidden');
        }

        function closeImagePreview() {
            document.getElementById('imagePreviewModal').classList.add('hidden');
        }

        // ====================
        // TESTIMONIALS FUNCTIONS
        // ====================
        
        function renderTestimonials() {
            const container = document.getElementById('testimonials');
            const colorClasses = {
                blue: 'from-blue-400 to-blue-600',
                orange: 'from-orange-400 to-orange-600',
                green: 'from-green-400 to-green-600',
                purple: 'from-purple-400 to-purple-600'
            };
            
            if (testimonials.length === 0) {
                container.innerHTML = `
                    <div class="md:col-span-3 text-center py-8">
                        <p class="text-gray-500">No testimonials yet</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = testimonials.map(t => {
                const colorClass = colorClasses[t.color] || colorClasses.blue;
                return `
                <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br ${colorClass} flex items-center justify-center mr-4">
                            <i data-feather="user" class="text-white"></i>
                        </div>
                        <div class="flex-1">
                            ${isAdminLoggedIn ? `
                                <input type="text" 
                                       value="${escapeHtml(t.name)}" 
                                       oninput="debounceUpdateTestimonial(${t.id}, 'name', this.value)"
                                       class="font-semibold text-slate-800 w-full border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                <input type="text" 
                                       value="${escapeHtml(t.location)}" 
                                       oninput="debounceUpdateTestimonial(${t.id}, 'location', this.value)"
                                       class="text-gray-500 text-sm w-full border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                            ` : `
                                <h4 class="font-semibold text-slate-800">${escapeHtml(t.name)}</h4>
                                <p class="text-gray-500 text-sm">${escapeHtml(t.location)}</p>
                            `}
                        </div>
                    </div>
                    ${isAdminLoggedIn ? `
                        <textarea 
                               oninput="debounceUpdateTestimonial(${t.id}, 'text', this.value)"
                               class="text-gray-700 w-full border-2 border-transparent hover:border-orange-300 focus:border-orange-500 rounded-lg p-2 focus:outline-none transition resize-none" 
                               rows="3">${escapeHtml(t.text)}</textarea>
                        
                        <div class="mt-4 flex justify-between items-center">
                            <select onchange="updateTestimonialColor(${t.id}, this.value)" 
                                    class="text-sm border rounded-lg px-2 py-1 bg-white">
                                <option value="blue" ${t.color === 'blue' ? 'selected' : ''}>Blue</option>
                                <option value="orange" ${t.color === 'orange' ? 'selected' : ''}>Orange</option>
                                <option value="green" ${t.color === 'green' ? 'selected' : ''}>Green</option>
                                <option value="purple" ${t.color === 'purple' ? 'selected' : ''}>Purple</option>
                            </select>
                            
                            <button type="button" 
                                    onclick="deleteTestimonial(${t.id})" 
                                    class="text-red-500 hover:text-red-700 text-sm"
                                    aria-label="Delete testimonial">
                                <i data-feather="trash-2" class="w-4 h-4"></i>
                            </button>
                        </div>
                    ` : `
                        <p class="text-gray-700">"${escapeHtml(t.text)}"</p>
                    `}
                </div>
            `}).join('');
            
            if (isAdminLoggedIn) {
                container.innerHTML += `
                    <div class="bg-gradient-to-br from-gray-50 to-gray-100 border-2 border-dashed border-gray-300 rounded-xl p-6 flex flex-col items-center justify-center cursor-pointer hover:border-orange-400 transition"
                         onclick="addNewTestimonial()"
                         aria-label="Add new testimonial">
                        <i data-feather="plus" class="w-12 h-12 text-gray-400 mb-3"></i>
                        <p class="font-semibold text-gray-500">Add New Testimonial</p>
                        <p class="text-sm text-gray-400 mt-1">Click to add customer review</p>
                    </div>
                `;
            }
            
            feather.replace();
        }

        function debounceUpdateTestimonial(id, field, value) {
            clearTimeout(debounceTimers[`testimonial-${id}-${field}`]);
            debounceTimers[`testimonial-${id}-${field}`] = setTimeout(async () => {
                await updateTestimonial(id, field, value);
            }, 500);
        }

        async function updateTestimonial(id, field, value) {
            if (!isAdminLoggedIn) return;
            
            const testimonial = testimonials.find(t => t.id === id);
            if (testimonial) {
                testimonial[field] = value;
                
                try {
                    await saveTestimonial(testimonial);
                } catch (error) {
                    showNotification('Error saving testimonial', 'error');
                }
            }
        }

        function updateTestimonialColor(id, color) {
            updateTestimonial(id, 'color', color);
            renderTestimonials();
        }

        async function deleteTestimonial(id) {
            if (!isAdminLoggedIn) return;
            
            if (confirm('Delete this testimonial?')) {
                try {
                    await apiRequest(`${API_CONFIG.ENDPOINTS.TESTIMONIALS}/${id}`, 'DELETE');
                    testimonials = testimonials.filter(t => t.id !== id);
                    renderTestimonials();
                    showNotification('Testimonial deleted', 'info');
                } catch (error) {
                    showNotification('Error deleting testimonial', 'error');
                }
            }
        }

        async function addNewTestimonial() {
            if (!isAdminLoggedIn) return;
            
            const colors = ['blue', 'orange', 'green', 'purple'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            
            const newTestimonial = {
                name: 'New Customer',
                location: 'Location',
                text: 'Enter testimonial text here...',
                color: randomColor
            };
            
            try {
                const result = await saveTestimonial(newTestimonial);
                testimonials.push(result);
                renderTestimonials();
                showNotification('New testimonial added', 'success');
            } catch (error) {
                showNotification('Error adding testimonial', 'error');
            }
        }

        // ====================
        // NOTIFICATION SYSTEM
        // ====================
        
        function showNotification(message, type = 'info') {
            const colors = {
                success: 'bg-green-500',
                error: 'bg-red-500',
                warning: 'bg-yellow-500',
                info: 'bg-blue-500'
            };
            
            const icons = {
                success: 'check-circle',
                error: 'alert-circle',
                warning: 'alert-triangle',
                info: 'info'
            };
            
            // Remove existing notifications
            document.querySelectorAll('.custom-notification').forEach(el => el.remove());
            
            const notification = document.createElement('div');
            notification.className = `custom-notification fixed top-20 right-4 px-4 py-3 rounded-lg shadow-lg z-50 transition-all transform translate-x-0 ${colors[type]} text-white`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i data-feather="${icons[type]}" class="w-5 h-5 mr-2"></i>
                    <span>${escapeHtml(message)}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Initialize feather icon
            const iconElement = notification.querySelector('i');
            if (iconElement && typeof feather !== 'undefined') {
                feather.replace(iconElement);
            }
            
            // Auto-remove after 3 seconds
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

