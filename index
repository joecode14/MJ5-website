        // ====================
        // MODAL FUNCTIONS
        // ====================
        
        function showLoginModal() {
            document.getElementById('loginModal').classList.remove('hidden');
        }

        function hideLoginModal() {
            document.getElementById('loginModal').classList.add('hidden');
            document.getElementById('loginForm').reset();
            document.getElementById('loginError').classList.add('hidden');
        }

        // ====================
        // SELL FORM PHOTO HANDLING
        // ====================
        
        function initializeSellFormPhotos() {
            const photoInput = document.getElementById('motorcyclePhotos');
            if (photoInput) {
                photoInput.addEventListener('change', handleSellFormPhotos);
            }
        }

        function handleSellFormPhotos(event) {
            const files = Array.from(event.target.files);
            const remaining = 5 - uploadedPhotos.length;
            
            if (files.length > remaining) {
                alert(`You can only upload ${remaining} more photo(s)`);
                event.target.value = '';
                return;
            }

            files.forEach(file => {
                if (file.size > 5 * 1024 * 1024) { // 5MB
                    alert(`${file.name} is too large. Max size is 5MB`);
                    return;
                }

                if (!file.type.startsWith('image/')) {
                    alert(`${file.name} is not an image file`);
                    return;
                }

                uploadedPhotos.push({
                    file: file,
                    url: URL.createObjectURL(file),
                    name: file.name,
                    size: file.size
                });
            });
            
            renderSellFormPhotoPreview();
            event.target.value = '';
        }

        function renderSellFormPhotoPreview() {
            const grid = document.getElementById('photoPreviewGrid');
            const count = document.getElementById('photoCount');
            
            if (!grid || !count) return;
            
            grid.innerHTML = uploadedPhotos.map((photo, i) => `
                <div class="relative image-preview-container">
                    <img src="${photo.url}" alt="Preview ${i + 1}" class="w-full h-24 object-cover rounded-lg shadow border-2 border-orange-200 cursor-pointer" onclick="previewSellFormPhoto(${i})">
                    <button type="button" 
                            onclick="removeSellFormPhoto(${i})" 
                            class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center shadow-lg hover:bg-red-600 transition font-bold"
                            aria-label="Remove photo">
                        √ó
                    </button>
                    <div class="absolute bottom-1 left-1 bg-black/70 text-white text-xs px-2 py-1 rounded">
                        ${formatBytes(photo.size)}
                    </div>
                </div>
            `).join('');
            
            count.textContent = `${uploadedPhotos.length}/5 photos`;
            if (uploadedPhotos.length === 5) {
                count.innerHTML += ' <span class="text-red-400">(Maximum reached)</span>';
            }
        }

        function previewSellFormPhoto(index) {
            const photo = uploadedPhotos[index];
            if (!photo) return;
            
            document.getElementById('previewedImage').src = photo.url;
            document.getElementById('imagePreviewName').textContent = photo.name;
            document.getElementById('imagePreviewSize').textContent = formatBytes(photo.size);
            document.getElementById('imagePreviewModal').classList.remove('hidden');
        }

        function removeSellFormPhoto(index) {
            URL.revokeObjectURL(uploadedPhotos[index].url);
            uploadedPhotos.splice(index, 1);
            renderSellFormPhotoPreview();
        }

        // ====================
        // EVENT LISTENERS
        // ====================
        
        function bindEventListeners() {
            if (eventListenersBound) return;
            
            // Admin buttons
            document.getElementById('addNewBikeBtn').addEventListener('click', addNewMotorcycle);
            document.getElementById('exportDataBtn').addEventListener('click', exportData);
            document.getElementById('logoutBtn').addEventListener('click', logoutAdmin);
            
            // Share button
            document.getElementById('shareButton').addEventListener('click', toggleSharePreview);
            
            // Login form
            document.getElementById('loginForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const username = document.getElementById('adminUsername').value.trim();
                const password = document.getElementById('adminPassword').value;
                const errorDiv = document.getElementById('loginError');
                
                if (await loginAdmin(username, password)) {
                    errorDiv.classList.add('hidden');
                } else {
                    errorDiv.classList.remove('hidden');
                    document.getElementById('adminPassword').value = '';
                    document.getElementById('adminPassword').focus();
                }
            });
            
            // Modal controls
            document.getElementById('adminLoginBtn').addEventListener('click', showLoginModal);
            document.getElementById('mobileAdminLoginBtn').addEventListener('click', showLoginModal);
            document.getElementById('closeLoginModal').addEventListener('click', hideLoginModal);
            document.getElementById('closeImagePreview').addEventListener('click', closeImagePreview);
            
            // Password toggle
            document.getElementById('togglePassword').addEventListener('click', function() {
                const passwordInput = document.getElementById('adminPassword');
                const icon = this.querySelector('i');
                
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    icon.setAttribute('data-feather', 'eye-off');
                } else {
                    passwordInput.type = 'password';
                    icon.setAttribute('data-feather', 'eye');
                }
                feather.replace();
            });
            
            // Login prompt
            document.getElementById('loginPrompt').addEventListener('click', function(e) {
                e.preventDefault();
                showLoginModal();
            });
            
            // Mobile menu
            document.getElementById('mobileMenuBtn').addEventListener('click', function() {
                const dropdown = document.getElementById('mobileDropdown');
                dropdown.classList.toggle('hidden');
                
                const icon = this.querySelector('i');
                icon.setAttribute('data-feather', dropdown.classList.contains('hidden') ? 'menu' : 'x');
                feather.replace();
            });
            
            // Close modals on ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    hideLoginModal();
                    closeImagePreview();
                    document.getElementById('sharePreview').classList.add('hidden');
                }
            });
            
            // Sell form
            document.getElementById('sellMotorcycleForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData);
                
                // Validation
                if (!validatePhoneNumber(data.phone)) {
                    showNotification('Please enter a valid Kenyan phone number (e.g., 0725 101 417)', 'error');
                    return;
                }

                try {
                    await submitInquiry(data, uploadedPhotos);
                    e.target.reset();
                    uploadedPhotos.forEach(photo => URL.revokeObjectURL(photo.url));
                    uploadedPhotos = [];
                    renderSellFormPhotoPreview();
                } catch (error) {
                    // Error already shown
                }
            });
            
            // Initialize sell form photos
            initializeSellFormPhotos();
            
            eventListenersBound = true;
        }

        // ====================
        // INITIALIZATION
        // ====================
        
        async function init() {
            try {
                console.log('üöÄ Initializing MWIRUTI JNR Marketplace...');
                
                // Show loading screen
                const loadingScreen = document.getElementById('loadingScreen');
                loadingScreen.classList.remove('hidden');
                
                // Initialize feather icons
                if (typeof feather !== 'undefined') {
                    feather.replace();
                }
                
                // Check admin session
                await checkAdminSession();
                
                // Load data from database
                await loadFromDatabase();
                
                // Render content
                renderMotorcycles();
                renderTestimonials();
                renderSellFormPhotoPreview();
                
                // Setup event listeners
                bindEventListeners();
                
                // Hide loading screen
                setTimeout(() => {
                    loadingScreen.style.opacity = '0';
                    setTimeout(() => {
                        loadingScreen.classList.add('hidden');
                        loadingScreen.style.opacity = '1';
                        console.log('‚úÖ MWIRUTI JNR Marketplace loaded successfully!');
                    }, 300);
                }, 1000);
                
            } catch (error) {
                console.error('‚ùå Initialization error:', error);
                document.getElementById('loadingStatus').textContent = 'Error loading application';
                
                setTimeout(() => {
                    document.getElementById('loadingScreen').classList.add('hidden');
                }, 2000);
                
                showNotification('Error loading application. Check console for details.', 'error');
            }
        }

        // Start everything when page loads
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>